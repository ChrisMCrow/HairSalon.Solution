<div class="container">
  <div class="row">
    <div class="col-md-4" id="sidebar">
    </div>
    <div class="col-md-8" id="content">
      <h1>Stylists</h1>
      <hr />
    </div>
  <div class="row">
    <div class="col-md-4" id="sidebar">
      <form action="/client/new" method="post">
        <h3>Add a New Client for @Model.GetStylistName()</h3>
        <div class="form-group">
          <label for="clientName">Name</label>
          <input class="form-control" name="clientName" type="text" placeholder="Last, First">
        </div>
        <button type="submit" class="btn btn-info">Add</button>
      </form>
    </div>
    <div class="col-md-8" id="content">
      <h1>@Model.GetStylistName()</h1>
      <hr />
      @foreach (var item in Model)
      {
        <h3>@item.GetClientName()</h3>
      }
    </div>
  </div>
</div>
